{% extends 'base.html.twig' %}


{% block body %}


    <br>
    <h1 class="text-center">Stock utilisé par tâche</h1>
    <br>


    <table class="table table-bordered align-content-center mx-auto" style="width: 90%">
        <thead class="thead-dark ">
        <tr>
            <th scope="col">Id</th>
                <th>Stock de base</th>
                <th>Quantité utilisée</th>
                <th>Tâche utilisatrice</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stock_tache_utilise in stock_tache_utilises %}
            <tr>
                <td>{{ stock_tache_utilise.id }}</td>
                <td>{{ stock_tache_utilise.stock }}</td>
                <td>{{ stock_tache_utilise.quantite }}</td>
                <td>{{ stock_tache_utilise.tache }}</td>
                <td>
                    <button type="button" class="btn btn-outline-primary"><a href="{{ path('stock_tache_utilise_show', {'id': stock_tache_utilise.id}) }}">Voir</a></button>
                    <button type="button" class="btn btn-outline-warning"><a href="{{ path('stock_tache_utilise_edit', {'id': stock_tache_utilise.id}) }}">Modifier</a></button>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune donnée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div style="margin-left: 100px">
        <button type="button" class="btn btn-outline-success mx-auto"><a href="{{ path('stock_tache_utilise_new') }}">Ajouter</a></button>
    </div>

{% endblock %}
