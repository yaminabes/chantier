{% extends 'base.html.twig' %}

{% block title %}TypeBatiment index{% endblock %}

{% block body %}
    <h1>TypeBatiment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomType</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_batiment in type_batiments %}
            <tr>
                <td>{{ type_batiment.id }}</td>
                <td>{{ type_batiment.nomType }}</td>
                <td>
                    <a href="{{ path('type_batiment_show', {'id': type_batiment.id}) }}">show</a>
                    <a href="{{ path('type_batiment_edit', {'id': type_batiment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('type_batiment_new') }}">Create new</a>
{% endblock %}
