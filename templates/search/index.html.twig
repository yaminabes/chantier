{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ '/home/fsertdem/PhpstormProjects/chantier/src/Controller/SearchController.php'|file_link(0) }}">src/Controller/SearchController.php</a></code></li>
        <li>Your template at <code><a href="{{ '/home/fsertdem/PhpstormProjects/chantier/templates/search/index.html.twig'|file_link(0) }}">templates/search/index.html.twig</a></code></li>
    </ul>
   {#  {{ form(form) }}
   #}
</div>


    {% if app.request.method == 'POST' %}
        <div>
            {% if chantier | length == 0 %}
                <h4>Aucun résulat pour votre recherche.</h4>
            {% else %}
                <h3 class="mt-3">Vos résulats de recherche :</h3>
                {% for chantier in chantier %}
                    <div class="mt-3 p-3 bg-light border rounded">
                        <a href="{{ path('chantier_show', {'slug': chantier.slug}) }}">
                            <h6 class="text-dark"><i class="bi bi-arrow-down-right-square-fill text-primary"></i> {{ chantier.title }}</h6>
                            <div class="text-dark small p-1 rounded">
                             {#    Posté le {{ chantier.createdAt|format_datetime('medium', 'short') }} par {{ chantier.author }}
                             #}
                            </div>
                        </a>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
