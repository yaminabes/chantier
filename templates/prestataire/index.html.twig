{% extends 'base.html.twig' %}


{% block title %}Prestataire index{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <h1>Prestataire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Siret</th>
                <th>Actions</th>
                <th>Metiers</th>
            </tr>
        </thead>
        <tbody>
        {% for prestataire in prestataires %}
            <tr>
                <td>{{ prestataire.id }}</td>
                <td>{{ prestataire.nom }}</td>
                <td>{{ prestataire.siret }}</td>

                <td>
                    <a href="{{ path('prestataire_show', {'id': prestataire.id}) }}">show</a>
                    <a href="{{ path('prestataire_edit', {'id': prestataire.id}) }}">edit</a>
                </td>

                <td>
                    {% for metier in prestataire.metiers %}
                        <li>{{ metier }}</li>
                    {% endfor %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('prestataire_new') }}">Create new</a>
{% endblock %}
