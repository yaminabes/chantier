{% extends 'base.html.twig' %}

{% block title %}Tache{% endblock %}

{% block body %}
    <h1>Tache</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tache.id }}</td>
            </tr>
            <tr>
                <th>Nom_tache</th>
                <td>{{ tache.nomTache }}</td>
            </tr>
            <tr>
                <th>Tarif_prestation</th>
                <td>{{ tache.tarifPrestation }}</td>
            </tr>
            <tr>
                <th>Matériaux necessaires</th>
                <td>
                    {% for m in tache.materiauxNecessaires %}
                        <li>{{ m }} <a class="btn btn-warning" href="{{ path('materiaux_necessaires_edit', {'id': m.id}) }}">M-A-J</a></li>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Prestataires</th>
                <td>{{ tache.prestataire }}</td>
            </tr>
            <tr>
                <th>Métier</th>
                <td>{{ tache.metier }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ tache.statut }}</td>
            </tr>

        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('tache_index') }}">back to list</a>

    <a class="btn btn-warning"  href="{{ path('tache_edit', {'id': tache.id}) }}">edit</a>

    {{ include('tache/_delete_form.html.twig') }}
{% endblock %}
