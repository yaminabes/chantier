{% extends 'base.html.twig' %}

{% block title %}Tache index{% endblock %}

{% block body %}
    <h1>Tache index</h1>
{{ dump(taches) }}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_tache</th>
                <th>Tarif_prestation</th>
                <th>Mat√©riaux necessaires</th>
                <th>prestataire</th>
                <th>Metier</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tache in taches %}
            <tr>
                <td>{{ tache.id }}</td>
                <td>{{ tache.nomTache }}</td>
                <td>{{ tache.tarifPrestation }}</td>
                <td>
                    {% for m in tache.stockTacheUtilises  %}
                        <li>{{ m }}
                            <a class="btn btn-warning" href="{{ path('stock_tache_utilise_edit', {'id': m.id}) }}">M-A-J</a>
                        </li>
                    {% endfor %}
                    </td>
                <td>{{ tache.prestataire}}</td>
                <td>{{ tache.metier }}</td>
                <td>{{ tache.statut }}</td>

                <td>
                    <a class="btn btn-primary" href="{{ path('tache_show', {'id': tache.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('tache_edit', {'id': tache.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tache_new') }}">Create new</a>
{% endblock %}
