{% extends 'base.html.twig' %}

{% block title %}Chantier{% endblock %}

{% block body %}


    <br>
    <h1 class="text-center">CHANTIER {{ chantier.id }}</h1>
    <br>

    <table class="table table-bordered align-content-center mx-auto" style="width: 90%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chantier.id }}</td>
            </tr>
            <tr>
                <th>Date de Debut</th>
                <td>{{ chantier.dateDebut ? chantier.dateDebut|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de Fin</th>
                <td>{{ chantier.dateFin ? chantier.dateFin|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ chantier.adresse }}</td>
            </tr>
        </tbody>
    </table>

    <div style="margin-left: 100px">

        <button type="button" class="btn btn-outline-primary"><a href="{{ path('chantier_index') }}">Retour Ã  la liste</a></button>

