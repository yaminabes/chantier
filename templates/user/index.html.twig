{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table table-bordered">
        <thead class="thead-dark ">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Username</th>
                <th scope="col">Role demandé</th>
                <th scope="col">Adresse</th>
                <th scope="col">NumTel</th>
                <th scope="col">Roles</th>
                <th scope="col">Nom</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>

                <td>{{ user.email }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.role_user }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.numTel }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.nom }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Voir</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucune donnée</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
    <a href="{{ path('user_new') }}">Créer un utilisateur</a>

{% endblock %}
