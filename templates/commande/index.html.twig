{% extends 'base.html.twig' %}


{% block body %}

    <br>
    <h1 class="text-center">COMMANDE</h1>
    <br>

    <table class="table table-bordered align-content-center mx-auto" style="width: 90%">
        <thead class="thead-dark ">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Quantité</th>
                <th scope="col">Facture</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}

            <tr>

                {% if commande.quantite == 0 %}
                    {# <td><a style="color:#FF0000";>{{ commande.id }}</a></td>
                    <td><a style="color:#FF0000";>{{ commande.quantite }} : À réapprovisionner</a></td>
                    <td><a style="color:#FF0000";>{{ commande.facture }}</a></td>


                <td>
                    <button type="button" class="btn btn-outline-primary"><a href="{{ path('commande_show', {'id': commande.id}) }}">Voir</a></button>
                    <button type="button" class="btn btn-outline-warning"><a href="{{ path('commande_edit', {'id': commande.id}) }}">Modifier</a></button>
                </td>
            </tr>
                    #}
                {% else %}
                    <td>{{ commande.id }}</td>
                    <td>{{ commande.quantite }}</td>
                    <td>{{ commande.facture }}</td>


                    <td>
                        <button type="button" class="btn btn-outline-primary"><a href="{{ path('commande_show', {'id': commande.id}) }}">Voir</a></button>
                        <button type="button" class="btn btn-outline-warning"><a href="{{ path('commande_edit', {'id': commande.id}) }}">Modifier</a></button>
                    </td>
                    </tr>
                {% endif %}

        {% else %}
            <tr>
                <td colspan="3">Aucune donnée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div style="margin-left: 100px">
        <button type="button" class="btn btn-outline-success mx-auto"><a href="{{ path('commande_new') }}">Ajouter une commande</a></button>
    </div>


{% endblock %}
